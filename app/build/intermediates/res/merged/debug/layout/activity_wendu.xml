<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/rfid_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content" 
            android:hint="扫描获得"/>

        <Button
            android:id="@+id/wendu_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="rfid扫描" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:id="@+id/center_content">

            <TextView
                android:id="@+id/cangku_tv"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="仓库号" />

            <TextView
                android:id="@+id/bianhao_tv"
                android:layout_width="80dp"
                android:layout_height="50dp" 
                android:text="编号"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="输入温度:" />
            <EditText 
                android:id="@+id/input_wendu"
                android:layout_width="80dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <Button 
            android:id="@+id/queding_btn"
           	android:layout_below="@id/center_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="确定"/>
    </RelativeLayout>

</LinearLayout>